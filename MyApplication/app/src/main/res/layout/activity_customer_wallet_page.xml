<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frontendCustomer.AccountPage.CustomerWalletPage">

    <TextView
        android:id="@+id/balance"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balanceï¼š100.00"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/paymentHistory"
        app:layout_constraintTop_toBottomOf="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment History"
        android:textSize="30dp"
        android:textStyle="bold">
    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/paymentHistory"
        tools:layout_editor_absoluteX="30dp"
        tools:listitem="@layout/transfer_card_item"></ListView>




</androidx.constraintlayout.widget.ConstraintLayout>