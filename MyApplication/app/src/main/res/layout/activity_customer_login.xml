<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnBackProvider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frontendCustomer.loginPage.CustomerLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtWelcome1"
            style="@style/WelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="text"
            android:text="  Easy Housekeeping," />


        <TextView
            android:id="@+id/txtWelcome2"
            style="@style/WelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="text"
            android:text="  Life's Stress Relieving!" />

    </LinearLayout>

<RelativeLayout
    android:layout_width="380dp"
    android:layout_height="220dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp">


    <EditText
        android:id="@+id/txtCustomerUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="65dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="    Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtCustomerPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_gravity="center_horizontal"
        android:layout_marginStart="65dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="    Password"
        android:inputType="textPassword" />


</RelativeLayout>

    <ImageButton
        android:id="@+id/btnCustomerLogin"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/btn_login" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


    <TextView
        android:id="@+id/txtCustomerNoAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:text="Don't have XXX account ?" />
    <TextView
        android:id="@+id/txtCustomerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/txtCustomerNoAccount"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="#CF4B4B"/>

    </RelativeLayout>


</LinearLayout>


