<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:background="@drawable/border_background"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select your order date"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/selectStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select startDate"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border_background"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select your start time"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/selectStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select startTime"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>


    <LinearLayout
        android:background="@drawable/border_background"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="selcet your end time"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/selectEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select EndTime"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pay"></Button>





</LinearLayout>
