<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResetPwTitle"
            style="@style/WelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Reset Password ?"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtResetPwTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Reset code was sent to your email."
            android:textColor="#737171"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtResetPwTitle"
            android:layout_gravity="center_horizontal"
            android:text=" Please enter the code and create new password."
            android:textColor="#737171"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="100dp" />

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">



        <EditText
            android:id="@+id/txtVerifyCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:hint="Verify Code"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtNewPassword1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"

            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txtNewPassword2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"

            android:hint="New Password Again"
            android:inputType="textPassword" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/btnCustomerResetPassword"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/btn_reset" />


</LinearLayout>