<!--                android:text="price : 200"-->
<!--                android:paddingLeft="10dp"-->
<!--                android:textColor="@color/grey"-->
<!--                android:textSize="15dp"></TextView>-->



<!--        </LinearLayout>-->


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>