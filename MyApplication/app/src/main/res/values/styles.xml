<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WelcomeText">
        <item name="android:textSize">30dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    //not bounce when selected
    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    //edit seek bar style
    <style name="CustomSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>


</resources>